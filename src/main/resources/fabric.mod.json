	"authors": [
		"Goby56"
	],
	"contact": {
		"homepage": "https://modrinth.com/mods/wakes",
		"sources": "https://github.com/Goby56/wakes",
		"issues": "https://github.com/Goby56/wakes/issues"
	},
	"license": "GPLv3",
